<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.creationCompte">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editText_speudo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="speudo"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/editText_motdepasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="mot de passe"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editText_confirmermotdepasse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint=" confirmer mot de passe"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/editText_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="e-mail"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/button_import_icone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="selectionner une icone" />

            <Button
                android:id="@+id/button_enregistrer_compte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="S'inscrire" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>